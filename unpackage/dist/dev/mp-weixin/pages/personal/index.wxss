.personal {
  background-color: #ffffff;
  min-height: calc(100vh - 72px);
  max-height: calc(100vh - 94px);
}
.personal .header {
  height: 212rpx;
  position: relative;
  background: -webkit-linear-gradient(139deg, #f05138 0%, #ff9751 100%);
  background: linear-gradient(311deg, #f05138 0%, #ff9751 100%);
  border-radius: 20rpx;
}
.personal .header .introduction {
  position: absolute;
  top: 30rpx;
  left: 48rpx;
  bottom: 30rpx;
  color: #ffffff;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.personal .header .introduction .block {
  width: 384rpx;
  display: block;
}
.personal .header .image {
  width: 100%;
  height: 100%;
}
.personal .header .portrait {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-left: 84rpx;
}
.personal .list_l {
  height: 128rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  border-bottom: 2rpx solid #e6e6e6;
  padding: 0rpx 10rpx;
}
.personal .list_l .all_color {
  color: #ff623e;
}
.personal .list_l .title {
  color: #323233;
  padding-left: 20rpx;
  font-size: 32rpx;
  vertical-align: middle;
}
.personal .per_ico {
  width: 26rpx;
  height: 36rpx;
  vertical-align: middle;
}
.personal .collect_ico {
  width: 36rpx;
  height: 36rpx;
}
.personal .order_ico {
  width: 34rpx;
  height: 34rpx;
}

